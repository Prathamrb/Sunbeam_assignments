// Java program to demonstrate initializing
// an array of objects using constructor
package Que2;

import java.util.Scanner;

public class que2 {

	public static void main(String args[])
	{

		// Declaring an array of student
		Student arr[] = new Student[2];

		// Allocating memory for 2 objects
		// of type student
		arr[0] = new Student();
		arr[1] = new Student();
	arr[0].get();
		arr[1].get();
		// Initializing the first element
		// of the array
		//arr[0] = new Student(1701289270, "Satyabrata");

		// Initializing the second element
		// of the array
		//arr[1] = new Student(1701289219, "Omm Prasad");

		// Displaying the student data
		System.out.println(
			"Student data in student arr 0: ");
		arr[0].display();

		System.out.println(
			"Student data in student arr 1: ");
		arr[1].display();
	}
}

// Creating a student class with
// id and name as a attributes
class Student {

	public int id;
	public String name;
	Scanner sc =new Scanner(System.in);
	// Student class constructor
	void get()
	{System.out.println("Enter");
			id= sc.nextInt();
					name=sc.next();
	}

	// display() method to display
	// the student data
	public void display()
	{
		System.out.println("Student id is: " + id + " "
						+ "and Student name is: "
						+ name);
		System.out.println();
	}
}
